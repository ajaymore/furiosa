datasource db {
  provider = "sqlite"
  url      = "sqlite:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  groups    Group[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Group {
  id        String   @id @default(cuid())
  name      String
  users     User[]   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}